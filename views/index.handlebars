<div class="jumbotron jumbotron-fluid" id="jumbo">
  <div class="container">
    <h1 class="burgerSign">Burgers!</h1>
    <p class="lead">Pick any Burger you desire and Eat it! .</p>
    <img src="https://cdn.clipart.email/73f6810a7af2e1388909788335ba4bb5_burger-blue-clipart-paint-splash-7-gif-clipartix_500-428.gif#.XpjTtxEt8aw.link" alt="burger image">
  </div>
</div>

<div class="container-fluid">
    <div class="row">
    <div class="col-sm-12">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="bu">Burger Name:</label>
          <input type="text" id="bu" name="name">
        </div>


        <button  class="btn" type="submit">Add A Burger</button>
      </form>
    </div>
    {{!-- <div class="col-sm-8"></div> --}}
  </div>
  <div class="row">
    <div class="col-sm-6">
      <h2>Burgers to eat!</h2>

      <ul>
        {{#each burgers}}
        {{#unless eat}}
        {{> burgers/burger-block eat=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div> <div class="col-sm-6">

      <h2> Eaten Burgers!</h2>

      <ul>
        {{#each burgers}}
        {{#if eat}}
        {{> burgers/burger-block eat=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
    
  </div>

  <div class="row">
   
    <div class="col-sm-12" id="beef"></div>
  </div>
  


</div>
<footer> yum yum</footer>